<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libraryserver.manager.mapper.AppraiseMapper">

    <resultMap type="com.example.libraryserver.manager.po.AppraisePo" id="AppraiseMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="bName" column="b_name" jdbcType="VARCHAR"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AppraiseMap">
        select
          id, b_name, reason, create_time
        from library.appraise
        where id = #{id}
    </select>
    <select id="queryLikeName" resultMap="AppraiseMap">
        select
          id, b_name, reason, create_time
        from library.appraise
        where b_name like concat('%', #{name}, '%')
        order by id desc
    </select>
    <select id="queryByName" resultMap="AppraiseMap">
        select
          id, b_name, reason, create_time
        from library.appraise
        where b_name = #{bName}
        order by id desc
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AppraiseMap">
        select
          id, b_name, reason, create_time
        from library.appraise
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AppraiseMap">
        select
          id, b_name, reason, create_time
        from library.appraise
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="bName != null and bName != ''">
                and b_name = #{bName}
            </if>
            <if test="reason != null and reason != ''">
                and reason = #{reason}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into library.appraise(b_name, reason, create_time)
        values (#{bName}, #{reason}, now())
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.appraise
        <set>
            <if test="bName != null and bName != ''">
                b_name = #{bName},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.appraise where id = #{id}
    </delete>
    <delete id="deleteByIds">
        delete from library.appraise
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

</mapper>